[mysqld]
server-id=2
relay_log=relay                 # ตั้งชื่อไฟล์ relay log ที่ copy มาจาก binlog
binlog_format=ROW               # 
gtid_mode=ON                    
enforce_gtid_consistency=ON
log_replica_updates=ON
read_only=ON                    # replica มีสิทธิ์ read เท่านั้น กันพลาด    
super_read_only=ON              # กันอีกชั้นกรณี user มี permission สูงๆ